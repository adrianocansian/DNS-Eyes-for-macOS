{
  "dns_changer": {
    "version": "1.0.0",
    "description": "Configuração de exemplo para DNS Changer Eye macOS",
    
    "general": {
      "enabled": true,
      "interval": 300,
      "interface": "auto",
      "log_level": "INFO"
    },
    
    "dns_servers": {
      "cloudflare": ["1.1.1.1", "1.0.0.1"],
      "quad9": ["9.9.9.9", "149.112.112.112"],
      "opendns": ["208.67.222.222", "208.67.220.220"],
      "google": ["8.8.8.8", "8.8.4.4"],
      "verisign": ["64.6.64.6", "64.6.65.6"],
      "uncensored_dns": ["91.239.100.100", "89.233.43.71"],
      "cleanbrowsing": ["185.228.168.9", "185.228.169.9"],
      "yandex": ["77.88.8.8", "77.88.8.1"],
      "adguard": ["176.103.130.130", "176.103.130.131"],
      "dns_advantage": ["156.154.70.1", "156.154.71.1"],
      "norton": ["199.85.126.10", "199.85.127.10"],
      "greenteam": ["81.218.119.11", "209.88.198.133"],
      "safedns": ["195.46.39.39", "195.46.39.40"],
      "smartviper": ["208.76.50.50", "208.76.51.51"],
      "dyn": ["216.146.35.35", "216.146.36.36"],
      "freedns": ["37.235.1.174", "37.235.1.177"],
      "alternate_dns": ["198.101.242.72", "23.253.163.53"],
      "puntcat": ["109.69.8.51", "8.8.8.8"],
      "quad101": ["101.101.101.101", "101.102.103.104"],
      "fdn": ["80.67.169.12", "80.67.169.40"],
      "opennic": ["185.121.177.177", "185.121.177.53"],
      "as250": ["195.10.46.179", "212.82.225.7"],
      "orange": ["194.168.4.100", "194.168.8.100"],
      "singnet": ["203.122.222.6", "203.122.223.6"],
      "level3": ["209.244.0.3", "209.244.0.4"]
    },
    
    "security": {
      "require_sudo": true,
      "sudoers_file": "/etc/sudoers.d/dns_changer",
      "log_dns_changes": true,
      "validate_dns": true
    },
    
    "daemon": {
      "enabled": true,
      "label": "com.dns-changer.daemon",
      "plist_path": "~/Library/LaunchAgents/com.dns-changer.daemon.plist",
      "run_at_load": true,
      "keep_alive": true,
      "throttle_interval": 10
    },
    
    "logging": {
      "enabled": true,
      "log_dir": "~/.dns_changer",
      "log_file": "~/.dns_changer/daemon.log",
      "error_log": "~/.dns_changer/daemon_error.log",
      "max_log_size": "10MB",
      "retention_days": 30
    },
    
    "notifications": {
      "enabled": false,
      "on_dns_change": false,
      "on_error": true,
      "on_startup": false
    }
  }
}
